<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    tools:context=".DisplayProduct">


    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_menu_gallery" />

    <TextView
        android:layout_below="@+id/product_image"
        android:id="@+id/product_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="product name"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/product_3d_view"
        android:layout_toRightOf="@id/product_name"
        android:layout_below="@id/product_image"
        android:layout_width="wrap_content"
        android:background="@color/teal_200"
        android:text="3D view"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="10dp"
        android:layout_height="40dp"/>

    <ImageView
        android:id="@+id/rupee_logo"
        android:layout_below="@+id/product_name"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/rupee_logo"
        android:layout_width="50dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/product_price"
        android:layout_below="@+id/product_image"
        android:layout_toRightOf="@+id/rupee_logo"
        android:layout_marginTop="40dp"
        android:textSize="16sp"
        android:layout_marginLeft="-15dp"
        android:text="price"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TableRow
        android:layout_marginTop="10dp"
        android:layout_below="@+id/product_price"
        android:id="@+id/hr"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/offer"
        android:layout_below="@+id/hr"
        android:text="Current Offer Available\n > 10% off on SBI credit card\n > Extra Rs 4000 off on SBI credit cards.\n on order of Rs 10000 and above"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TableRow
        android:layout_marginTop="10dp"
        android:layout_below="@+id/offer"
        android:id="@+id/hr2"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/p_details"
        android:layout_below="@+id/hr2"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:text="Products Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/detail_code"
        android:layout_below="@id/p_details"
        android:layout_width="wrap_content"
        android:text="code:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/product_code"
        android:text="product code"
        android:layout_below="@+id/p_details"
        android:layout_toRightOf="@id/detail_code"
        android:layout_marginLeft="50dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/detail_description"
        android:text="description:"
        android:layout_below="@+id/detail_code"
        android:layout_toRightOf="@id/detail_code"
        android:layout_marginLeft="-45dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

   <TextView
       android:id="@+id/product_description"
       android:text="description"
       android:layout_below="@+id/product_code"
       android:layout_marginLeft="120dp"
       android:textStyle="bold"
       android:textSize="18sp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_add_to_cart"
        android:layout_alignParentBottom="true"
        android:background="#FFC107"
        android:text="add to cart"
        android:textAllCaps="true"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</RelativeLayout>